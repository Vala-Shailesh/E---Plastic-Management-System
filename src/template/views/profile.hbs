     <div class="main">
          <!-- <h1 class="text-center t-m-1em b-m-1em"> Profile are ready to  processing </h1> -->
          <div class="profile-container">
               <!-- <div class="block opacity-0-7"> Service </div>  -->
               <div class="">
                    <div class="profile-btn-layout flex-space-evenly">
                              <button class="btn no-hover-effect r-m-2em" id="profile-enable"> Enable </button>
                              <button class="btn invisiable" id="profile-disable"> Disable </button>
                              <div class="min-width"></div>
                              <button class="btn invisiable"> <a href="/forgetPassword"> Password Reset </a> </button>
                              <div>
                                   <form action="/logout" method="post">
                                        <input type="hidden" name="email" value="{{user.email}}" style="display : none;">
